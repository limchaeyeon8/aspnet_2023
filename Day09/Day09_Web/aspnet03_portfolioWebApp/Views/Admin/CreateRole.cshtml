@model aspnet02_boardapp.Models.CreateRoleModel

@{
    ViewData["Title"] = "권한 생성";
    Layout = "~/Views/Shared/_NewLayout.cshtml";

}

<div style="padding:50px;" class="mt-5">
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-8">
                <h4 class="text-primary">권한 생성</h4>
            </div>
            <div class="col-4 text-end">
            </div>
        </div>
    </div>
    <hr />

    <div class="container">
        <div class="row">
            <div class="col">
                <form asp-action="CreateRole" method="post">
                    <div asp-validation-summary="All" class="text-danger">
                        <div class="form-group">
                            <label asp-for="RoleName">권한 명</label>
                            <input asp-for="RoleName" class="form-control" />
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>

                        <button type="submit" value="롤 생성" class="btn btn-bg-dark btn-sm btn-primary">
                            <span class="bi bi-pin-angle"></span>&nbsp; 권한 생성
                        </button>
                        <a asp-action="ListRoles" class="btn btn-sm btn-secondary">
                            <i class="bi bi-list-stars"></i>&nbsp; 권한목록
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

